#include <stdio.h>   
#include <string.h>   
void main()   
{   
    char str[50],rstr[50], temp;    
    int i, left, right, len;   
    printf (" \n Enter a string to reverse order: ");   
    scanf( "%s", &str);   
    len = strlen(str);  
    left = 0;  
    right = len - 1;  
    for (i = left; i <=len; i++)   
    {   
        rstr[i] = str[right];  
        right--;   
    }   
    printf (" The reverse of the %s is: %s ",str,rstr);   
    if(strcmp(str,rstr)==0) 
    printf(" \n%s is palindrome",str); 
    else 
    printf("\n%s is not palindrome",str); 
}   
